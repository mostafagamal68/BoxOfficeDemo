<style>
    .message{
        width:fit-content;
        position: fixed;
        margin-left: auto;
        margin-right: auto;
        left: 0;
        right: 0;
        text-align: center;
        z-index:99;
    }
</style>

@if (!string.IsNullOrWhiteSpace(AddedMessage))
{
    <div class="alert alert-success message" role="alert">
        @AddedMessage
    </div>
}
@code {
    [Parameter]
    public string AddedMessage { get; set; }
}
