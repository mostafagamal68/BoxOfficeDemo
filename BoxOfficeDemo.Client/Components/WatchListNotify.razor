@inject IWatchListService WatchListervice
<AuthorizeView>
    <Authorized>
        <button type="button" class="btn btn-outline-primary position-relative mx-3" style="border-radius:15px;"
                @onclick="async ()=> await ShowWatchList.InvokeAsync()">
            @*@onclick="WatchListervice.Reset"*@
            My Watchlist
            <i class="oi oi-list-rich"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                @if (WatchListervice.Count > 0)
                {
                    @WatchListervice.Count
                }
            </span>
        </button>
    </Authorized>
</AuthorizeView>

@code {
    [Parameter]
    public EventCallback<bool> ShowWatchList { get; set; }
    protected override void OnInitialized()
    {
        WatchListervice.OnChange += StateHasChanged;
    }
}
