<style>
    .loader {
        width: fit-content;
        position: fixed;
        margin-left: auto;
        margin-right: auto;
        left: 0;
        right: 0;
        text-align: center;
        z-index: 99;
    }
</style>
@if (Toggle)
{
    <div class="loader">
        <div class="spinner-border" role="status">
            <span class="sr-only"></span>
        </div>
    </div>
}
@code {
    [Parameter]
    public bool Toggle { get; set; }
}
