@inject IWatchListService WatchListService
@inject IJSRuntime JSRuntime
@inherits BaseComponent

<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <Loader Toggle="IsLoading"></Loader>

                <Virtualize Context="WatchList" Items="WatchListService.WatchListList">
                    <div class="row">
                        <img src="@WatchList.Image" />
                        <h4>@WatchList.MovieName</h4>
                        <button class="btn btn-danger">Remove</button>
                    </div>
                </Virtualize>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="() => Close()">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        IsLoading = true;
        await WatchListService.GetWatchList(LoggedUser.Id);
        IsLoading = false;
        base.OnInitialized();
    }

    string ModalDisplay = "none;";
    string ModalClass = "";
    bool ShowBackdrop = false;

    public void Open()
    {
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();
    }

    public void Close()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }
}
